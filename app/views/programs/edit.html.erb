<h1>Editing Program</h1>

<%= form_for :program, url: program_path(@program), method: :patch do |f| %>
	<% if @program.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@program.errors.count, "error") %> prohibited
				this program from being saved:</h2>
			<ul>
				<% @program.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</p>



	<p>
		<%= f.submit %>
	</p>
<% end %>


<h2>Add a station:</h2>
<%= form_for([@program, @program.program_stations.build]) do |f| %>
	<p>
		<%= f.label :station %><br>
		<%= f.select :station_id, Station.all.collect {|station| [ station.name, station.id ] } %>
	</p>
	<p>
		<%= f.label :duration %><br>
		<%= f.text_field :duration %>
	</p>
	<p>
		<%= f.label :order %><br>
		<%= f.text_field :order %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', program_path %>
