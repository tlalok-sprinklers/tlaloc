<h1>Listing Stations</h1>


<%= link_to 'New Station', new_station_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Enabled</th>
    <th colspan="3">Options</th>
  </tr>
 
  <% @stations.each do |station| %>
    <tr>
      <td><%= station.name %></td>
      <td><%= station.description %></td>
      <td><%= station.enabled %></td>
    <td><%= link_to 'Show', station_path(station) %></td>
    <td><%= link_to 'Edit', edit_station_path(station) %></td>
    <td><%= link_to 'Destroy', station_path(station),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>